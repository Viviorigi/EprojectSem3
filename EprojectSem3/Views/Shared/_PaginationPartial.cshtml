@model (int CurrentPage, int TotalPages, string ActionName)

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(Model.ActionName, new { pageNumber = Model.CurrentPage - 1 })">Prev</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="@Url.Action(Model.ActionName, new { pageNumber = i })">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(Model.ActionName, new { pageNumber = Model.CurrentPage + 1 })">Next</a>
            </li>
        }
    </ul>
</nav>
