    <script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css" rel="stylesheet" />
    <script>
              $(function () {

            $(".rateyo").each(function () {
                var rating = $(this).data("rateyo-rating");
                $(this).rateYo({
                    rating: rating
                });

                $('#ratingStar').val(rating);

                $(this).parent().find('.result').text('rating : ' + rating);
            });

            // Update the rating value on change
            $(".rateyo").on("rateyo.change", function (e, data) {
                var rating = data.rating;

                $(this).parent().find('.result').text('rating : ' + rating);

                // Set the rating value to the hidden input
                $('#ratingValue').val(rating);
            });
        });

    </script>
    <script>
        // Kiểm tra TempData để hiển thị thông báo
        const message = '@TempData["msg"]';
        const alertType = '@TempData["AlertType"]';

        if (message) {
            Swal.fire({
                icon: alertType || 'info',
                title: 'Notification',
                text: message,
            });
        }
    </script>
    


