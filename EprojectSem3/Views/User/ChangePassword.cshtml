
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Realtors_Portal.Models.ChangePassword;
}
<!-- Breadscrumb Section -->
<div class="breadcrumb-bar">
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-md-12 col-12">
                <h2 class="breadcrumb-title">Profile</h2>
            </div>
        </div>
    </div>
</div>
<!-- /Breadscrumb Section -->
<!-- Profile Content -->
<div class="dashboard-content listing-section ">
    <div class="container">
        <div class="">
            <ul class="dashborad-menus">
                <li>
                    @{
                        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                    }
                    <a asp-controller="User" asp-action="Index">
                        <i class="fa-solid fa-user"></i> <span>Profile</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="User" asp-action="ChangePassword">
                        <i class="fa-solid fa-user"></i> <span>Password</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="User" asp-action="Listing">
                        <i class="feather-list"></i> <span>My Listing</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Logout">
                        <i class="fas fa-light fa-circle-arrow-left"></i> <span>Logout</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="profile-content">
            <div class="row dashboard-info  d-flex justify-content-center">
                <div class="col-lg-5">
                    <div class="profile-sidebar">
                        <div class="card">
                            <div class="card-header">
                                <h4>Change Password</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" asp-controller="User" asp-action="ChangePassword">
                                    <div class="form-set">
                                        <label class="col-form-label">Current Password</label>
                                        <div class="pass-group group-img">
                                            <span class="lock-icon"><i class="feather-lock"></i></span>
                                            <input type="password" class="form-control pass-input" asp-for="OldPassword" placeholder="Password">
                                        </div>
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-set">
                                        <label class="col-form-label">New Password</label>
                                        <div class="pass-group group-img">
                                            <span class="lock-icon"><i class="feather-lock"></i></span>
                                            <input type="password" class="form-control pass-input" asp-for="NewPassword" >
                                            <span class="toggle-password feather-eye-off"></span>
                                        </div>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-set">
                                        <label class="col-form-label">Confirm New Password</label>
                                        <div class="pass-group group-img">
                                            <span class="lock-icon"><i class="feather-lock"></i></span>
                                            <input type="password" class="form-control pass-input" asp-for="ConfirmPassword" >
                                            <span class="toggle-password feather-eye-off"></span>
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <button class="btn btn-primary" type="submit"> Change Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Profile Content -->
