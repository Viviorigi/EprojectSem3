
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
	@model Realtors_Portal.Models.ResetPasswordModel
}

<!-- Breadscrumb Section -->
<div class="breadcrumb-bar">
	<div class="container">
		<div class="row align-items-center text-center">
			<div class="col-md-12 col-12">
				<h2 class="breadcrumb-title">ResetPassword</h2>
				<nav aria-label="breadcrumb" class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
						<li class="breadcrumb-item active" aria-current="page">ResetPassword</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- /Breadscrumb Section -->
<!-- Login Section -->
<div class="login-content">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-5 mx-auto">
				<div class="login-wrap">

					<div class="login-header">
						<h3>ResetPassword</h3>
					</div>

					<!-- Login Form -->
					<form asp-action="ResetPassword" asp-controller="Home" method="post">
						<input type="hidden" asp-for="Token" />
						<input type="hidden" asp-for="Email" />
						<div class="form-set group-img">
							<div class="group-img">
								<i class="feather-mail"></i>
								<input type="password" class="form-control" asp-for="NewPassword" placeholder="NewPassword">
							</div>
							<span asp-validation-for="NewPassword" class="text-danger"></span>
						</div>
						<div class="form-set">
							<div class="pass-group group-img">
								<i class="feather-lock"></i>
								<input type="password" class="form-control  pass-input" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
								<span class="toggle-password feather-eye"></span>
							</div>
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<button class="btn btn-primary w-100 login-btn" type="submit">ResetPassword</button>
						
					</form>
					
				</div>
			</div>
		</div>

	</div>
</div>