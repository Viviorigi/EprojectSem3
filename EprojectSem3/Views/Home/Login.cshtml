
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
	@model EprojectSem3.Models.LoginModel
}

<!-- Breadscrumb Section -->
<div class="breadcrumb-bar">
	<div class="container">
		<div class="row align-items-center text-center">
			<div class="col-md-12 col-12">
				<h2 class="breadcrumb-title">Login</h2>
			</div>
		</div>
	</div>
</div>
<!-- /Breadscrumb Section -->
<!-- Login Section -->
<div class="login-content">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-lg-5 mx-auto">
				<div class="login-wrap">

					<div class="login-header">
						<h3>Welcome Back</h3>
						<p>Please Enter your Details</p>
					</div>
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@if (ViewBag.error != null)
					{
						@Html.Raw(ViewBag.error)
					}
					<!-- Login Form -->
					<form asp-action="Login" method="post">
						<div class="form-set group-img">
							<div class="group-img">
								<i class="feather-mail"></i>
								<input type="text" class="form-control" asp-for="Email" placeholder="Email Address">
							</div>
						</div>
						<div class="form-set">
							<div class="pass-group group-img">
								<i class="feather-lock"></i>
								<input type="password" class="form-control  pass-input" asp-for="Password" placeholder="Password">
								<span class="toggle-password feather-eye"></span>
								
							</div>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					
						<button class="btn btn-primary w-100 login-btn" type="submit">Sign in</button>
						<div class="register-link text-center">
							<p>No account yet? <a class="forgot-link" asp-action="SignUp" asp-controller="Home" >Signup</a></p>
							<div class="text-center">
								<a class="forgot-link" asp-action="ForgotPassword" asp-controller="Home">Forgot password?</a>
							</div>
						</div>
						<div class="login-or">
							<span class="or-line"></span>
							<span class="span-or">Sign in with Social Media Accounts</span>
						</div>
						<div class="social-login">
							<a asp-controller="Home" asp-action="LoginByGoogle" class="btn btn-apple w-100"><img src="~/assets/img/google.svg" class="me-1" alt="img">Sign in with Google</a>
						</div>
					</form>
					<!-- /Login Form -->

				</div>
			</div>
		</div>

	</div>
</div>
<!-- /Login Section -->
