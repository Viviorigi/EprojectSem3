@{
	ViewData["Title"] = "Checkout";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadscrumb Section -->
<div class="breadcrumb-bar">
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-md-12 col-12">
                <h2 class="breadcrumb-title">Checkout Membership</h2>
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Listing</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- /Breadscrumb Section -->
<!-- Profile Content -->
<div class="dashboard-content listing-section ">
	<div class="container">
		<div class="profile-content">
			<div class="messages-form">
				<div class="card">
					<div class="card-header">
						<h4>Subscription</h4>
					</div>
					<div class="card-body">
						<div class="form-set">
							<label class="col-form-label">Name</label>
							<input class="form-control pass-input" readonly>
						</div>
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="form-set formlast-input">
									<label class="col-form-label">Quantity</label>
									<select class="form-control select">
										<option>1</option>
										<option>2</option>
										<option>3</option>
									</select>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card">
					<div class="card-header">
						<h4>Contact Information </h4>
					</div>
					<div class="card-body">
						<div class="form-set">
							<label class="col-form-label">Email </label>
							<input type="text" class="form-control pass-input" placeholder="">
						</div>
						<div class="form-set formlast-input">
							<label class="col-form-label">Phone </label>
							<input type="text" class="form-control pass-input" placeholder="">
						</div>
					</div>
				</div>
				<div class="card">
					<div class="card-header">
						<h4>Pay</h4>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="form-set formlast-input">
									<label class="col-form-label">Pay</label>
									<select class="form-control select">
										<option>Paypal</option>
										<option>Momo</option>
										<option>Banking</option>
									</select>
								</div>
							</div>
						</div>
					</div>
				</div>
                <button class="btn btn-primary" type="submit"> Confirm and Pay</button>
			</div>
		</div>
	</div>
</div>
<!-- /Profile Content -->