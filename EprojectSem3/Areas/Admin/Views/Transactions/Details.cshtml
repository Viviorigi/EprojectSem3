@model DataAccessLayer_DAL.Models.Transaction

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center transaction-title">Transaction Details</h1>

<div class="card transaction-card shadow-lg">
    <div class="card-header transaction-card-header">
        <h4 class="mb-0">Transaction Information</h4>
    </div>
    <div class="card-body transaction-card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 text-muted transaction-label">
                <strong>User Name</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Phone Number</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </dd>
            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Email</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Address</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.User.Address)
            </dd>
            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Subscription Name</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.Subscription.Name)
            </dd>

            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Amount</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Transaction Date</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.TransactionDate)
            </dd>

            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Payment Date</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                @Html.DisplayFor(model => model.PaymentDate)
            </dd>

            <dt class="col-sm-4 text-muted transaction-label">
                <strong>Payment Status</strong>
            </dt>
            <dd class="col-sm-8 transaction-value">
                <h6 class="@(Model.IsPaid ? "badge-active" : "badge-inactive")">
                    @(Model.IsPaid ? "Paid" : "Unpaid")
                </h6>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3 text-center">
    <a class="btn btn-secondary transaction-button" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        // Injecting CSS into the page using JavaScript
        const style = document.createElement('style');
        style.innerHTML = `
            /* General card styles */
            .transaction-card {
                border-radius: 10px;
                border: none;
                background-color: #f8f9fa;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
                margin-top: 2rem;
            }

            .transaction-card-header {
                background-color: #007bff;
                color: #fff;
                padding: 1.5rem;
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
                font-size: 1.5rem;
                text-align: center;
            }

            .transaction-card-body {
                padding: 2rem;
                font-family: Arial, sans-serif;
            }

            /* Styling for labels and values */
            .transaction-label {
                font-size: 1.1rem;
                font-weight: 600;
                color: #6c757d;
                padding-top: 0.5rem;
            }

            .transaction-value {
                font-size: 1.1rem;
                color: #495057;
                word-wrap: break-word;
                padding-top: 0.5rem;
            }

            /* Styling for the action button */
            .transaction-button {
                font-size: 1.1rem;
                padding: 0.75rem 2rem;
                border-radius: 5px;
                background-color: #6c757d;
                color: white;
                text-decoration: none;
                transition: background-color 0.3s ease;
                margin-top: 1.5rem;
            }

            .transaction-button:hover {
                background-color: #5a6268;
            }

            /* Title styling */
            .transaction-title {
                font-size: 2.5rem;
                font-weight: bold;
                color: #007bff;
                margin-top: 2rem;
            }

            /* Badge styles for payment status */
            .badge-active {
                color: #fff;
                background-color: #28a745;
                padding: 0.5rem 1rem;
                border-radius: 10px;
            }

            .badge-inactive {
                color: #fff;
                background-color: #dc3545;
                padding: 0.5rem 1rem;
                border-radius: 10px;
            }

        `;
        document.head.appendChild(style);
    </script>
}

                }