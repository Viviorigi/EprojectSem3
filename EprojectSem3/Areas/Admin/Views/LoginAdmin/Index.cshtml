@{
    ViewData["Title"] = "LoginAdmin";
    Layout = null;
    @model EprojectSem3.Models.LoginModel;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Listee | @ViewData["Title"]</title>

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/assets/admin/assets/img/favicon.png">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="~/assets/admin/assets/css/feather.html">

    <!-- Select 2 -->
    <link rel="stylesheet" href="~/assets/admin/assets/plugins/select2/css/select2.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/assets/admin/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/admin/assets/plugins/fontawesome/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/admin/assets/plugins/bootstrap/css/bootstrap.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/assets/admin/assets/css/style.css">

</head>

<body>
    <div class="main-wrapper wrapper-login">
        <div class="login-pages">
            <div class="container-fluid">
                <div class="row align-items-center justify-content-center">
                    <div class="col-lg-12">
                        <div class="login-logo">
                            <img src="~/assets/admin/assets/img/logo-login.png" alt="img">
                        </div>
                    </div>
                    <div class="col-lg-6 col-xl-5 mx-auto">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-contenthead text-center">
                                    <h5>Login</h5>
                                </div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @if (ViewBag.error != null)
                                {
                                    @Html.Raw(ViewBag.error)
                                }
                                <form asp-area="Admin" asp-controller="LoginAdmin" asp-action="Index" method="post">
                                    <div class="login-input">
                                        <div class="form-set">
                                            <label>E-mail</label>
                                            <input type="text" class="form-control" asp-for="Email" placeholder="example@email.com">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-set">
                                            <div class="d-flex justify-content-between">
                                                <label>Password</label>
                                            </div>
                                            <div class="pass-group">
                                                <input type="password" class="form-control pass-input" asp-for="Password" placeholder="********">
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="login-button">
                                            <button type="submit" class="btn btn-login">Sign In</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/assets/admin/assets/js/jquery-3.7.1.min.js" type="57f155dcdbf8ec53fe4267c0-text/javascript"></script>

    <!-- Select 2 JS-->
    <script src="~/assets/admin/assets/js/select2.min.js" type="57f155dcdbf8ec53fe4267c0-text/javascript"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/assets/admin/assets/plugins/bootstrap/js/bootstrap.bundle.min.js" type="57f155dcdbf8ec53fe4267c0-text/javascript"></script>

    <!-- Custom JS -->
    <script src="~/assets/admin/assets/js/admin.js" type="57f155dcdbf8ec53fe4267c0-text/javascript"></script>
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script>
        // Kiểm tra TempData để hiển thị thông báo
        const message = '@TempData["msg"]';
        const alertType = '@TempData["AlertType"]';

        if (message) {
            Swal.fire({
                icon: alertType || 'info',
                title: 'Notification',
                text: message,
            });
        }
    </script>
</body>
</html>

