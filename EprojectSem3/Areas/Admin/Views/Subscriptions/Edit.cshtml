@model DataAccessLayer_DAL.Models.Subscription

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page-header content-page-headersplit">
    <h5>Edit Membership</h5>
</div>
<form asp-action="Edit">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-groupheads">
                <h2>Plan</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>
        <input type="hidden" asp-for="SubscriptionId" />
        <div class="col-lg-8">
            <div class="form-set">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="Name " asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-set">
                <label>Max ADS</label>
                <input type="number" class="form-control" placeholder="MaxAds" asp-for="MaxAds">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-set">
                <label>Duration</label>
                <select class="select" asp-for="Duration">
                    <option>Select Tenure</option>
                    <option value="30">Monthly</option>
                    <option value="365">Yearly</option>
                    <option value="0">No time limits</option>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="form-set">
                <label>Plan Price</label>
                <input type="text" class="form-control" placeholder="Enter Plan Price" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
                <h6 class="info-set"><i class="fe fe-info text-danger me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="content"></i>Set 0 for free</h6>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-set">
            <label>IsAgent?</label>
            <select asp-for="IsAgent" asp-items="ViewBag.IsAgent" class="form-control">
                
            </select>

        </div>
    </div>
    <div class="col-lg-12">
        <div class="btn-path">
            <a asp-action="Index" class="btn btn-cancel me-3">Cancel</a>
            <button type="submit" class="btn btn-submit" value="Save">Submit</button>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
