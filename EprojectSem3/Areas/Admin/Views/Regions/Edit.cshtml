@model DataAccessLayer_DAL.Models.Region

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit">
    <div class="row">
        <div class="col-lg-7 col-sm-12 m-auto">
            <div class="content-page-header">
                <h5>Add Regions</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="row">
                <input type="hidden" asp-for="RegionId" />
                <div class="col-lg-12">
                    <div class="form-set">
                        <label>Region Name</label>
                        <input type="text" class="form-control" placeholder="Enter Country Code" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="btn-path">
                        <a asp-action="Index" class="btn btn-cancel me-3">Cancel</a>
                        <button type="submit" class="btn btn-submit " value="Save"> Save </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
