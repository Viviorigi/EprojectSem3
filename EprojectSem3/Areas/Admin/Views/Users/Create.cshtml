@model DataAccessLayer_DAL.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-7 col-sm-12 m-auto">
            <div class="content-page-header">
                <h5>Add Users</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="sub-title">
                        <h6>Image</h6>
                    </div>
                    <div class="form-uploads mb-4">
                        <div class="form-uploads-path">
                            <img src="~/assets/admin/assets/img/icons/upload.svg" alt="img">
                            <div class="file-browse">
                                <h6>Drag &amp; drop image or </h6>
                                <div class="file-browse-path">
                                    <input type="file" id="singleFileInput" name="file">
                                    <a href="javascript:void(0);"> Browse</a>
                                </div>
                            </div>
                            <h5>Supported formates: JPEG, PNG</h5>
                            <div id="singleFilePreview" class="preview-container"></div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-set">
                        <label>Enter Full Name</label>
                        <input type="text" class="form-control" placeholder="Add Name" asp-for="FullName">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Phone</label>
                        <input type="text" class="form-control" placeholder="Enter Phone Number" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Email</label>
                        <input type="text" class="form-control" placeholder="Enter Email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-set">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Password</label>
                        <div class="pass-group">
                            <input type="password" class="form-control pass-input" placeholder="*********" asp-for="Password">
                            <span class="fas toggle-password fa-eye-slash"></span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Role</label>
                        <select asp-for="Role" class="form-control">
                            <option value="">Select Role</option>
                            @foreach (var role in ViewBag.Role)
                            {
                                <option value="@role.Value">@role.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Status" value="1">
                <div class="col-lg-12">
                    <div class="btn-path">
                        <a asp-action="Index" class="btn btn-cancel me-3">Cancel</a>
                        <button type="submit" class="btn btn-submit" value="Create"> Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<style>
    .preview-image {
        max-width: 100px;
        max-height: 100px;
        margin: 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .preview-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }
</style>

<script>
    // Hiển thị ảnh từ input đơn
    document.getElementById('singleFileInput').addEventListener('change', function (event) {
        const previewContainer = document.getElementById('singleFilePreview');
        previewContainer.innerHTML = ''; // Xóa preview cũ
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const img = document.createElement('img');
                img.src = e.target.result;
                img.alt = file.name;
                img.className = 'preview-image';
                previewContainer.appendChild(img);
            };
            reader.readAsDataURL(file);
        }
    });
</script>