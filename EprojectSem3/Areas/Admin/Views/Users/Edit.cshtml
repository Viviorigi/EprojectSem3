@model EprojectSem3.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit">
    <div class="row">
        <div class="col-lg-7 col-sm-12 m-auto">
            <div class="content-page-header">
                <h5>Edit Users</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <input type="hidden" asp-for="UserId" />
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-set">
                        <label>Enter Full Name</label>
                        <input type="text" class="form-control" placeholder="Add Name" asp-for="FullName">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Phone</label>
                        <input type="text" class="form-control" placeholder="Enter Phone Number" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Email</label>
                        <input type="text" class="form-control" placeholder="Enter Email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-set">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Password</label>
                        <div class="pass-group">
                            <input type="password" class="form-control pass-input" placeholder="*********" asp-for="Password">
                            <span class="fas toggle-password fa-eye-slash"></span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                @* <div class="col-lg-6"> *@
                @*     <div class="form-set"> *@
                @*         <label>Repeat Password</label> *@
                @*         <div class="pass-group"> *@
                @*             <input type="password" class="form-control pass-inputs" placeholder="*********"> *@
                @*             <span class="fas toggle-passwords fa-eye-slash"></span> *@
                @*         </div> *@
                @*     </div> *@
                @* </div> *@
                <div class="col-lg-6">
                    <div class="form-set">
                        <label>Role</label>
                        <select class="select">
                            <option value="0">Customers</option>
                            <option value="1">Manage Agent</option>
                            <option value="2">Admin </option>
                        </select>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-set">
                        <label>Status</label>
                        <ul class="custom-radiosbtn">
                            <li>
                                <label class="radiossets">
                                    Active
                                    <input type="radio" checked="checked" name="radio" asp-for="Status" value="1">
                                    <span class="checkmark-radio"></span>
                                </label>
                            </li>
                            <li>
                                <label class="radiossets">
                                    Inactive
                                    <input type="radio" name="radio" asp-for="Status" value="0">
                                    <span class="checkmark-radio"></span>
                                </label>
                            </li>
                        </ul>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="btn-path">
                        <a asp-action="Index" class="btn btn-cancel me-3">Cancel</a>
                        <button type="submit" class="btn btn-submit" value="Save"> Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>